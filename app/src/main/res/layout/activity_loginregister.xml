<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@drawable/rectangle479"
    android:layout_height="match_parent"
    tools:context=".loginregister">


    <ImageView
        android:id="@+id/imgl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:src="@drawable/group360"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp"
        />

    <ImageView
        android:id="@+id/imgl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/aqua"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:width="349dp"
        android:height="70dp"
        android:background="@drawable/btnlogin"
        android:text="Login"
        android:fontFamily="@font/montserratsemibold"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:onClick="login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgl2"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:width="349dp"
        android:height="70dp"
        android:background="@drawable/btnregis"
        android:text="Register"
        android:fontFamily="@font/montserratsemibold"
        android:textSize="18dp"
        android:onClick="register"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/btn2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="31dp"
        android:textAllCaps="false"/>

    <TextView
        android:id="@+id/textl1"
        android:layout_width="172dp"
        android:layout_height="51dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/rmontser"
        android:gravity="center"
        android:text="Kebaikan Alam Dalam hidup"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn3" />

    <ImageView
        android:id="@+id/imgl3"
        android:layout_width="322dp"
        android:layout_height="244dp"
        android:layout_marginTop="56dp"
        android:src="@drawable/baqua"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn3" />


</androidx.constraintlayout.widget.ConstraintLayout>